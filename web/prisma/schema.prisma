// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)
  fcmToken      String?   // Firebase Cloud Messaging token for push notifications
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  appointments  Appointment[]
  dayBlocks     DayBlock[]
}

enum Role {
  USER
  ADMIN
}

model Client {
  id        String   @id @default(cuid())
  name      String
  phone     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  appointments Appointment[]
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  duration    Int      // in minutes
  visible     Boolean  @default(true) // Controls visibility on booking page
  imageUrl    String?  // URL to service image
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  appointmentServices AppointmentService[]  // ← Changed: N:N relationship
}

model BusinessSettings {
  id                   String  @id @default(cuid())
  onlineBookingEnabled Boolean @default(false) // Master switch for online booking
  
  // Weekly Schedule Configuration
  // Format: { "monday": { "start": "09:00", "end": "18:00", "isOpen": true }, ... }
  workingHours         Json?    

  
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model Appointment {
  id        String   @id @default(cuid())
  date      DateTime @db.Timestamptz(6)
  totalDurationMinutes Int?  // ← NEW: Sum of all services' duration
  status    String   @default("PENDING") // PENDING, CONFIRMED, CANCELLED, COMPLETED
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  services  AppointmentService[]  // ← NEW: Multiple services per appointment
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Notifications
  notificationSent Boolean @default(false) // Track if 10-min reminder was sent
  
  // Financials
  paymentMethod PaymentMethod?
  paidPrice     Decimal?       @db.Decimal(10, 2) // Snapshot of total price at completion
}

enum PaymentMethod {
  PIX
  CASH
  CREDIT_CARD
  DEBIT_CARD
}

// ← NEW MODEL: Junction table for Appointment<->Service N:N relationship
model AppointmentService {
  id            String      @id @default(cuid())
  appointmentId String
  serviceId     String
  priceSnapshot Decimal     @db.Decimal(10, 2)  // Price at time of appointment
  order         Int         @default(1)          // Order of execution
  
  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  service       Service     @relation(fields: [serviceId], references: [id], onDelete: Restrict)
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  @@unique([appointmentId, serviceId])  // Prevent duplicate services
  @@index([appointmentId])
  @@index([serviceId])
}

model DayBlock {
  id          String    @id @default(cuid())
  startDate   DateTime  @db.Date
  endDate     DateTime  @db.Date
  reason      String?
  blockType   BlockType @default(FULL_DAY)
  
  // For partial blocks:
  startTime   String?   // Ex: "09:00" (required if PARTIAL)
  endTime     String?   // Ex: "12:00" (required if PARTIAL)
  
  createdBy   String
  user        User      @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([startDate, endDate])
}

enum BlockType {
  FULL_DAY    // Entire day blocked
  PARTIAL     // Only a specific time period
}
